= form_for @plsbgmusic do |f|
  - if @plsbgmusic.errors.any?
    #error_explanation
      h2 = "#{pluralize(@plsbgmusic.errors.count, "error")} prohibited this plsbgmusic from being saved:"
      ul
        - @plsbgmusic.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :device
    = f.collection_select :device_ids, Device.all, :id, :name, {}, { :multiple => true }
  .field
    = f.label :mediafile
    = f.collection_select :mediafile_ids, Mediafile.where(:content_id => 1).all, :id, :filename, {}, { :multiple => true}
  .actions = f.submit
