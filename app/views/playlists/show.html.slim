/p#notice = notice

p
   strong Device:
   = @playlist.task.device.name

table.table-striped.table-hover.table-condensed.table-bordered
  thead
    tr
      th Filename
  tbody
    - cntr = 1
    - Playlist.where(task_id: @playlist.task_id).each do |id|
      tr
        td
          = id.mediafile.filename
          - cntr += 1

= link_to 'Back', playlists_path
