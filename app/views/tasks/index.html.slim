  tbody
    - @tasks.each do |task|
      tr
        td = task.id
        td = task.device.name
        td = task.typeoftask.name
        td class="img-status #{task.typeofstatus.name.downcase}"
        td = task.options[0..30]+'...'
        td = (task.updated_at + 3600 * task.device.tzdate).to_s[0..18]
        td = (task.created_at + 3600 * task.device.tzdate).to_s[0..18]
        td = link_to 'Show', task
        td = link_to 'Edit', edit_task_path(task)
        td = link_to 'Destroy', task, data: {:confirm => 'Are you sure?'}, :method => :delete

